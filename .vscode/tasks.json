{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": "build"
    },
    {
      "label": "Deploy API",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "api", "run", "deploy"],
      "group": "build"
    }
  ]
}
